<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#333333">

    <!-- Tela de exibição -->
    <TextView
        android:id="@+id/displayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#444444"
        android:padding="24dp"
        android:text="0"
        android:textSize="32sp"
        android:gravity="end|center_vertical"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp" />

    <!-- Botões -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_gravity="center">

        <!-- Botão C -->
        <Button
            android:id="@+id/buttonClear"
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/rounded_button_orange"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>

        <!-- Botões operacionais -->
        <Button android:id="@+id/buttonDivide" android:text="/" android:background="@drawable/rounded_button_brown" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/buttonMultiply" android:text="*" android:background="@drawable/rounded_button_brown" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/buttonSubtract" android:text="-" android:background="@drawable/rounded_button_brown" android:textColor="#FFFFFF" android:textSize="24sp"/>

        <!-- Botões numéricos -->
        <Button android:id="@+id/button7" android:text="7" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/button8" android:text="8" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/button9" android:text="9" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/buttonAdd" android:text="+" android:background="@drawable/rounded_button_brown" android:textColor="#FFFFFF" android:textSize="24sp"/>

        <Button android:id="@+id/button4" android:text="4" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/button5" android:text="5" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/button6" android:text="6" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>

        <Button android:id="@+id/button1" android:text="1" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/button2" android:text="2" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/button3" android:text="3" android:background="@drawable/rounded_button_grey" android:textColor="#FFFFFF" android:textSize="24sp"/>
        <Button android:id="@+id/buttonEquals" android:text="=" android:background="@drawable/rounded_button_orange" android:textColor="#FFFFFF" android:textSize="24sp"/>

        <!-- Botões 0 e ponto -->
        <Button
            android:id="@+id/button0"
            android:text="0"
            android:layout_columnSpan="2"
            android:background="@drawable/rounded_button_grey"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>
        <Button
            android:id="@+id/buttonDot"
            android:text="."
            android:background="@drawable/rounded_button_grey"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>
    </GridLayout>
</LinearLayout>
